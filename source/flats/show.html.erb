<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>



<!-- Inject flat data in template -->
<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path flat.picture %>'); height: 25vh; background-position: center;">
</div>
